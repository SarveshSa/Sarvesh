		{
		  
		  
		  File appD = new File("C:\\Users\\bliss\\Desktop\\TwiTv_SetUp");
		  File app = new File(appD, "TWiT_V1.0.7.apk");
		  
		  DesiredCapabilities capabilities = new DesiredCapabilities();
		  
		  capabilities.setCapability("device", "Android");
